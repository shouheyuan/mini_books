/**app.wxss**/
@import './style/common.wxss';

view {
  box-sizing: border-box;
}

.display-flex {
  display: flex;
}

/* 列表  */
.list {
  background-color: #fff;
  border-radius: 16rpx;
}

.list_head {
  height: 100rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  padding: 36rpx 24rpx;
  border-radius: 12rpx 12rpx 0 0;
  /* margin-top: 40rpx; */
}

.list_head text {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.5);
  line-height: 36rpx;
}

.list_tail {
  height: 80rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 36rpx 24rpx;
  border-radius: 0 0 12rpx 12rpx;
  padding-bottom: 40rpx;
}

.list_tail text {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(0, 0, 0, 0.2);
  line-height: 36rpx;
}

.list .item {
  background-color: #fff;
  padding: 28rpx 36rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  position: relative;
}

.item_cover {
  width: 80rpx;
  align-items: center;
  justify-content: center;
  background-color: #ddd;
  border-radius: 12rpx;
}

.item_cover image {
  width: 100%;
  border-radius: 12rpx;
}

.item_left {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left:  36rpx;
}

.item_name {
  width: 460rpx;
  height: 42rpx;
  font-size: 36rpx;
  font-weight: 600;
  color: rgba(53, 53, 53, 1);
  line-height: 36rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.item_other {
  height: 28rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(53, 53, 53, 0.5);
  line-height: 28rpx;
  margin-top: 12rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
