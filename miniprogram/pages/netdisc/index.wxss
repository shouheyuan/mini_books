/* miniprogram/pages/netdisc/index.wxss */
page {
  background-color: #f5f5f5;
}

.search_bg {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #fff;
  padding-left: 20rpx;
  margin-bottom: 30rpx;
}

.search_input {
  font-size: 32rpx;
  color: #353535;
}

.search_input_placeholder {
  font-size: 32rpx;
  color: #ddd;
}

.search_bg image {
  width: 48rpx;
  height: 48rpx;
}

.search_bg text {
  font-size: 32rpx;
  color: #ddd;
}

.search_op_bar {
  display: flex;
  height: 114rpx;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: rgba(141, 141, 145, 1);
}


.hide_search_op {
  animation: hide_search_op_key .4s ease;
  animation-fill-mode: forwards;
}

@keyframes hide_search_op_key {
  0% {
    opacity: 1;
    transform: translate3d(0rpx, 0rpx, 1000rpx);
  }

  100% {
    opacity: 0;
    transform: translate3d(0rpx, 100rpx, 1000rpx);
  }
}

.show_search_op {
  animation: show_search_op_key .4s ease;
  animation-fill-mode: forwards;
}

@keyframes show_search_op_key {
  0% {
    opacity: 0;
    transform: translate3d(0rpx, 100rpx, 1000rpx);
  }

  100% {
    opacity: 1;
    transform: translate3d(0rpx, 0rpx, 1000rpx);
  }
}

.package {}

.package-item {
  background-color: #fff;
  padding: 24rpx;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
}

.package-title {
  font-size: 38rpx;
  font-weight: 500;
  margin-bottom: 30rpx;
}

.package-cover {
  background-color: #14d39d;
  flex: 0 0 300rpx;
  height: 200rpx;
  text-align: center;
  line-height: 200rpx;
  font-size: 28rpx;
  color: #fff;
  margin-right: 20rpx;
}

.package .introduction {
  width: 300rpx;
  font-size: 30rpx;
  color: #9fa0b1;
  white-space: normal;
  word-break: break-all;
  overflow: hidden;
}