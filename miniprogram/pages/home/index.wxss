/* miniprogram/pages/home/index.wxss */

.tabBlock {
	height: 80rpx;
	position: relative;
	background: #fff;
	border-bottom: 1rpx solid #e0e0e6;
	margin-bottom: 70rpx;
}

.tabBlock .tab {
	height: inherit;
	position: relative;
	display: flex;
	font-size: 28rpx;
	white-space: nowrap;
}

.tabBlock .tab__item {
	flex: 1;
	text-align: center;
	color: #9fa0b1;
	font-size: 32rpx;
	font-weight: 500;
}

.tabBlock .tab__item--active {
	color: #000;
}

.tabBlock .tab__item-title {
	margin: 0 40rpx;
}

.tabBlock .tab__line {
	display: block;
	height: 12rpx;
	bottom: 12rpx;
	left: 0;
	z-index: 1;
	border-radius: 3rpx;
	position: relative;
	background: #188c72;
}
